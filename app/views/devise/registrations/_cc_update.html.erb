<%= form_tag card_path, method: :put, id: "payment-form" do %> 
<form action="" method="POST" id="payment-form">
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input  type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input value="156" type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input value="02" type="text" size="2" data-stripe="exp-month"/>
    </label>
    <span> / </span>
    <input value="2020" type="text" size="4" data-stripe="exp-year"/>
  </div>

  <button type="submit">Update your card</button>
</form>
<% end %>
<div class="jumbotron text-center">
  <div class="container">
    <h1>Just enter any "Rotten Url" and get the data!</h1>
    <p>this app mines data from <%= link_to "Rotten Tomatoes", 
    "http://www.rottentomatoes.com/", :target => "_blank" %></p>
    <p><%= link_to "Get your Data", new_user_registration_path, class: "buttonCall" %></p>
  </div>
</div>
<% @movies.each do |movie| %>

  	
      <div class="panel panel-default col-md-4">
         <div class="panel-heading">
            <h3 class="panel-title"><%= movie.title %></h3>
              </div>
                <div class="panel-body">
              <%= image_tag movie.image_url %>
            </div>
          <div class="panel-footer"><%= movie.user.username %></div>
      </div>


<% end %>
